<synthetic xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd"
           xmlns="http://www.xebialabs.com/deployit/synthetic"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- HPE ALM Octane Authentication Configuration -->
    <type type="octane.Workspace" extends="xlrelease.Configuration">
        <property name="url" label="HPE ALM Octane Server" required="true" description="HPE ALM Octane Server URL." default=""/>
        <property name="client_id" label="Client ID" required="true" description="HPE ALM Octane Client ID."/>
        <property name="client_secret" label="Client Secret" required="true" password="true" description="HPE ALM Octane Client ID."/>
        <property name="shared_space_uid" label="Shared Space UID" required="true"/>
        <property name="workspace_id" label="Workspace ID" required="true"/>
    </type>

    <type type="octane.Task" extends="xlrelease.PythonScript" virtual="true">
        <property name="iconLocation" default="octane/octane-logo.png" hidden="true"/>
        <property name="octane_workspace" category="input" label="Octane Workspace" referenced-type="octane.Workspace" kind="ci" required="true" description="HPE ALM Octane Workspace."/>
    </type>

    <type type="octane.CreateFeatureDefect" extends="octane.Task">
        <property name="taskColor" hidden="true" default="#FF9E3B"/>
        <property name="featureName" category="input" required="true" description="Name of the feature. Wildcard can be used, but must resolve to a single instance."/>
        <property name="defectName" category="input" required="true"/>
        <property name="defectDescription" category="input" required="true"  size="large"/>
        <property name="defectId" category="output" />
        <property name="defectUrl" category="output" />
    </type>

    <type type="octane.FeatureDefectsGate" extends="octane.Task">
        <property name="taskColor" hidden="true" default="#DD4B39"/>
        <property name="featureName" category="input" required="true" description="Name of the feature. Wildcard can be used, but must resolve to a single instance."/>
        <property name="queryDefectPhases" category="input" kind="list_of_string" required="false" default="New, Deferred, Opened"/>
        <property name="negateQuery" kind="boolean" category="input" default="false" description="When true, defects must not have any of the desire phases."/>
        <property name="threshold" kind="integer" category="input" default="0"/>
        <property name="thresholdOperator" kind="enum" category="input" default="EQ">
          <enum-values>
            <value>EQ</value>
            <value>GT</value>
            <value>LT</value>
          </enum-values>
        </property>
    </type>

</synthetic>

